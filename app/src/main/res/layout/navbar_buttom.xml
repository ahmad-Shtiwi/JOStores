<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="0dp"
        android:background="@color/master">

        <ImageView
            android:id="@+id/profile_button_id"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="TODO"
            android:padding="7dp"
            app:srcCompat="@drawable/account_icon" />

        <ImageView
            android:id="@+id/add_item_button_id"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/chat_button_id"
            android:padding="7dp"
            app:srcCompat="@drawable/add_item_icon"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/chat_button_id"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/profile_button_id"
            android:padding="7dp"
            app:srcCompat="@drawable/chat_icon"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/home_button_id"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/search_button_id"
            android:padding="7dp"
            app:srcCompat="@drawable/home_icon" />

        <ImageView
            android:id="@+id/search_button_id"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/add_item_button_id"
            android:padding="7dp"
            app:srcCompat="@drawable/search_icon"
            android:contentDescription="TODO" />
    </RelativeLayout>


</RelativeLayout>