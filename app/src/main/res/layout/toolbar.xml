<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <RelativeLayout
        android:id="@+id/toobar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:background="@color/master">

        <ImageButton
            android:id="@+id/menu_button_id"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_navbar_bottom_selector"
            android:padding="7dp"
            android:src="@drawable/menu_picture" />

        <TextView
            android:id="@+id/Jo_store_nav_id"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:text="@string/app_name"

            android:textColor="@color/text2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cart_button_id"
            android:layout_width="53dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_navbar_bottom_selector"
            android:padding="7dp"
            android:src="@drawable/cart_icon" />

    </RelativeLayout>


</RelativeLayout>