<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <gradient android:startColor="@color/master" android:endColor="#cccccc"   android:type="radial" android:gradientRadius="180dp" android:angle="100"/>
        <corners android:radius="12dp"  />

    </shape>
</item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="@color/master" android:endColor="#000"   android:type="radial" android:gradientRadius="180dp" android:angle="100"/>
            <corners android:radius="12dp"  />

        </shape>
    </item>

</selector>